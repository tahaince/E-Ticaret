@model E_Ticaret.Models.Entity.TBL_URUN
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/PersonelLayout.cshtml";
}




@using (Html.BeginForm("UrunGuncelle","PersonelPanel", FormMethod.Post))
{
<form class="form-group">
    <div>
        <label>ÜRÜN ID</label>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", readyonly = true })
    </div>
    <br />


    <div>
        <label>ÜRÜN AD</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control", required = "required" })
    </div>
    <br />

    <div>
        <label>KATEGORİ</label>
        @Html.DropDownListFor(x => x.TBL_KATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <br />

    <div>
        <label>MARKA</label>
        @Html.DropDownListFor(x => x.TBL_MARKA.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <br />

    <div>
        <label>AÇIKLAMA</label>
        @Html.TextAreaFor(x => x.ACIKLAMA, new { @class = "form-control", required = "required" })
    </div>
    <br />

    <div>
        <label>FOTOGRAF</label>
        @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control", required = "required" })
    </div>
    <br />


    <div>
        <label>STOK</label>
        @Html.TextBoxFor(x => x.STOK, new { @class = "form-control", required = "required" })
    </div>
    <br />


    


    <div>
        <input type="hidden" value="true" name="DURUM" />
    </div>

    <div>
        <label>FİYAT</label>
        @Html.TextBoxFor(x => x.FIYAT, new { @class = "form-control", required = "required" })
    </div>
    <br />
    <button class="btn btn-info">EKLE</button>

</form>
}

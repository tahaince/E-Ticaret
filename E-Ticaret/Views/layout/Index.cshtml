                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">

                    <li class="nav-item"><input class="form-control" placeholder="Ürün Adı Giriniz.." /></li>
                    @foreach (var y in Model.deger5)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Kategori/KategoriIndex/@y.ID">@y.AD</a></li>
                    }

                <li>



                    <div class="w3-container">

                        <div class="w3-dropdown-hover">
                            <button class="w3-button w3-black">KULLANICI İŞLEMLERİ</button>
                            <div class="w3-dropdown-content w3-bar-block w3-border">
                                <a href="/Login/Girisyap" class="w3-bar-item w3-button">GİRİŞ YAP</a>
                                @*<a href="#" class="w3-bar-item w3-button">ŞİFRE DEĞİŞTİR</a>
                                <a href="#" class="w3-bar-item w3-button"></a>*@
                            </div>
